<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Activity.Page" parent="AppTheme">
        <item name="android:statusBarColor">@color/pageStatusBar</item>
    </style>

    <!-- Base icon button theme -->
    <style name="Button.Icon" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingStart">6dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="iconTint">@color/textColor</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <!-- Page seek bar -->
    <style name="SeekBar.Page" parent="AppTheme">
        <item name="android:progressTint">@color/darkLeaf</item>
        <item name="android:thumbTint">@color/darkLeaf</item>
        <item name="android:progressBackgroundTint">#B7B7B7</item>
    </style>

    <!-- Page chips -->
    <style name="Chip.Page" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipStartPadding">@dimen/page_chip_horizontal_padding</item>
        <item name="chipEndPadding">@dimen/page_chip_horizontal_padding</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/darkLeaf</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/darkLeaf</item>
        <item name="android:textAppearance">@style/TextAppearance.Chip.Page</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.ToolBarTitle.Collapsed" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/nanum_square</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.ToolBarTitle.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/nanum_square</item>
    </style>

    <style name="TextAppearance.Page" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nanum_square</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Chip.Page" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nanum_square</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>

<resources>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.AlertDialog</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Activity.Page" parent="Theme.App">
        <item name="android:statusBarColor">@color/pageStatusBar</item>
    </style>

    <style name="Theme.App.WhiteStatusBar" parent="Theme.App">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <!-- Page seek bar -->
    <style name="SeekBar.Page" parent="Theme.App">
        <item name="android:progressTint">@color/darkLeaf</item>
        <item name="android:thumbTint">@color/darkLeaf</item>
        <item name="android:progressBackgroundTint">#B7B7B7</item>
    </style>

    <!-- Page chips -->
    <style name="Chip.Page" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipStartPadding">@dimen/page_chip_horizontal_padding</item>
        <item name="chipEndPadding">@dimen/page_chip_horizontal_padding</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/darkLeaf</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/darkLeaf</item>
        <item name="android:textAppearance">@style/TextAppearance.Chip.Page</item>
    </style>

    <!-- Bookmark chips -->
    <style name="Chip.Bookmark" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="chipStartPadding">@dimen/page_chip_horizontal_padding</item>
        <item name="chipEndPadding">@dimen/page_chip_horizontal_padding</item>
        <item name="chipMinHeight">@dimen/page_bookmark_chip_height</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/darkLeaf</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/darkLeaf</item>
        <item name="closeIconVisible">true</item>
        <item name="closeIconTint">@color/lightLeaf</item>
        <item name="chipIcon">@drawable/ic_leaf</item>
        <item name="android:textAppearance">@style/TextAppearance.Chip.Page</item>
    </style>

    <!-- Button -->
    <style name="Widget.App.Button.Icon" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="iconTint">@color/textColor</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Button.Icon.Emerald" parent="Widget.App.Button.Icon">
        <item name="iconTint">@color/darkEmerald</item>
        <item name="rippleColor">@color/lightEmerald</item>
    </style>

    <style name="Widget.App.Button.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Widget.Button.Dialog</item>
        <item name="rippleColor">@color/lightEmerald</item>
        <item name="backgroundTint">@color/darkEmerald</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallButton.Dialog</item>
    </style>

    <style name="Widget.App.Button.TextButton.BottomSheetDialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button.TextButton.BottomSheetDialog</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="rippleColor">@color/lightEmerald</item>
    </style>

    <style name="Widget.App.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Widget.Button.Dialog</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallButton.Dialog</item>
    </style>
    
    <!-- FAB -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_layout_margin</item>
        <item name="android:elevation">@dimen/fab_elevation</item>
        <item name="rippleColor">@color/lightEmerald</item>
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">@color/darkEmerald</item>
    </style>

    <!-- Text Field -->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/text_input_indicator</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="hintTextColor">@color/darkEmerald</item>
        <item name="android:textColor">@color/darkEmerald</item>
    </style>

    <!-- Menu item -->
    <style name="Widget.App.CardView.MenuItem" parent="Widget.MaterialComponents.CardView">
        <item name="contentPaddingTop">12dp</item>
        <item name="contentPaddingBottom">12dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/darkEmerald</item>
    </style>

    <!-- Bottom sheet dialog -->
    <style name="AppBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.Design.BottomSheet.Modal</item>
    </style>

    <style name="Widget.App.Design.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.BottomSheet</item>
    </style>
    
    <!-- Alert dialog -->
    <style name="ThemeOverlay.App.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/AppAlertDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.TextButton.Dialog</item>
    </style>

    <style name="AppAlertDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.AlertDialog</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Shape Appearance -->
    <style name="ShapeAppearance.App.BottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

    <style name="ShapeAppearance.App.AlertDialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallButton.Dialog" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallBookCover" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopRight">6dp</item>
        <item name="cornerSizeBottomRight">6dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.ToolBarTitle.Collapsed" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.ToolBarTitle.Expanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
    </style>

    <style name="TextAppearance.Main.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Main.Recent.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textColor">@color/recentTitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Main.Recent.Time" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textColor">@color/recentTime</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Main.Recent.quote" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textColor">@color/recentTitle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Navigation" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nanum_square_r</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Page" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Chip.Page" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nanum_square</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Page.Menu.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nanum_square</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/darkForest</item>
    </style>

    <style name="TextAppearance.History.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/nanum_square</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkForest</item>
    </style>

    <style name="TextAppearance.App.Widget.Button.Dialog" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Button.TextButton.BottomSheetDialog" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.App.Manage.Title.Section" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.App.Manage.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.App.Manage.Desc" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans_cjk_r</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.page.activity.PageActivity">

    <data>
        <variable name="viewModel" type="com.appnyang.leafbookshelf.viewmodel.PageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textPainter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/page_margin"
            android:textAppearance="@style/TextAppearance.Page"
            android:lineSpacingMultiplier="1.6"
            android:visibility="invisible" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Top Menu -->
        <LinearLayout
            android:id="@+id/layoutTopMenu"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/menuBackground"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="@dimen/page_menu_elevation">

            <com.google.android.material.button.MaterialButton
                style="@style/Button.Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:backgroundTint="@color/menuBackground"
                app:iconSize="16dp"
                app:icon="@drawable/ic_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.Page"
                android:textSize="16sp"
                android:text="장씨세가 호위무사" />

            <com.google.android.material.button.MaterialButton
                style="@style/Button.Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/menuBackground"
                app:iconSize="16dp"
                app:icon="@drawable/ic_settings" />

            <com.google.android.material.button.MaterialButton
                style="@style/Button.Icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/menuBackground"
                app:iconSize="16dp"
                app:icon="@drawable/ic_bookmark" />

        </LinearLayout>

        <!-- Bottom Menu -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/menuBackground"
            android:elevation="@dimen/page_menu_elevation"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="198 / 2872"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <SeekBar
                android:id="@+id/seekPages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textPages" />
            
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:layout_constraintTop_toBottomOf="@id/seekPages"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chip_page" />
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chip_tts" />
                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chip_auto" />

            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
